<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/layoutlarge"
    tools:context=".MainActivity" >
        <LinearLayout
    android:paddingTop="50dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:gravity="center_horizontal"
        android:layout_marginBottom="-10dp"
        android:layout_marginLeft="-15dp"
        android:text="@string/the"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/silver"
        android:textSize="@dimen/title_top2" />

    </LinearLayout>
    <TextView
        android:id="@+id/title2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:gravity="center_horizontal|bottom"
        android:text="@string/grc"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/silver"
        android:textSize="@dimen/font_size2"
        android:textStyle="bold" />


<LinearLayout 
    android:paddingTop="80dp"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout 
     
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
    
        <Button
        android:id="@+id/activityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:drawableTop="@drawable/activityicon"
        android:paddingTop="6sp"
        android:text="@string/activity"
        android:textColor="@color/white"
        android:textSize="@dimen/bts" />
        <View
	            android:layout_width="140dp"
				android:layout_height="fill_parent"
				android:background="@null" />
        <Button
        android:id="@+id/touristButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:drawableTop="@drawable/touricon"
        
        android:paddingTop="6sp"
        android:text="@string/tour"
        android:textColor="@color/white"
        android:textSize="@dimen/bts" />
        </LinearLayout>
            <LinearLayout 
                android:paddingTop="30dp"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
            <Button
        android:id="@+id/calendarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/layout_bg"
        android:drawableTop="@drawable/calendaricon"
        android:paddingTop="6sp"
        android:text="@string/cal"
        android:textColor="@color/white"
        android:textSize="@dimen/bts" />
            <View
	            android:layout_width="140dp"
				android:layout_height="fill_parent"
				android:background="@null" />
    <Button
        android:id="@+id/wildButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:drawableTop="@drawable/animalicon"
                android:layout_marginTop="14dp"
        
        android:paddingTop="6sp"
        android:text="@string/wild"
        android:textColor="@color/white"
        android:textSize="@dimen/bts" />

 
</LinearLayout>
    <LinearLayout 
    android:paddingTop="30dp"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">


    <Button
        android:id="@+id/campButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:background="@drawable/layout_bg"
        android:drawableTop="@drawable/campicon"
        android:paddingTop="6sp"
        android:text="@string/tips"
        android:textColor="@color/white"
        android:textSize="@dimen/bts" />
    <View
	            android:layout_width="140dp"
				android:layout_height="fill_parent"
				android:background="@null" />
       <Button
        android:id="@+id/ruleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
        
        android:background="@drawable/layout_bg"
        android:drawableTop="@drawable/infoicon"
        android:paddingTop="6sp"
        android:text="@string/info"
        android:textColor="@color/white"
        android:textSize="@dimen/bts" />
</LinearLayout>
    
    
</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingTop="140dp" >

    <ImageButton
        android:id="@+id/phone"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/mainbuttonhigh"
        android:src="@drawable/phone_icon" />

    <View
        android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:background="@null" />

    <Button
        android:id="@+id/credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mainbuttonhigh"
        android:gravity="center_horizontal"
        android:paddingTop="30sp"
        android:text="Credits and Contributions" />

    <View
        android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:background="@null" />

    <ImageButton
        android:id="@+id/audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mainbuttonhigh"
        android:src="@drawable/aud" />
</LinearLayout>

</LinearLayout>
</ScrollView>