<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
        android:background="@color/actcolor"
    
    android:layout_height="fill_parent">
    <LinearLayout
    android:id="@+id/actLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actcolor"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    android:paddingTop="45sp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acttit"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:paddingBottom="25dp" />

    <Button
        android:id="@+id/mappop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#77FFFFFF"
        android:padding="13dp"
        android:text="Click here for a full trail map of the Rouge Valley"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\nClick below for information on\n\t\t\t the indiviual trails:\n"
        android:textColor="@color/black"
        android:textSize="28sp"
		android:paddingBottom="5dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left" 
        android:orientation="vertical">
		    <Button
		        android:id="@+id/beachpop"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/activitybuttonhigh"
		        android:text="1. The Rouge Beach Trail"
		        android:textSize="22sp"
		        android:paddingBottom="20dp" />
		
		    <Button
		        android:id="@+id/cedarpop"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/activitybuttonhigh"
		        android:text="2. Cedar Trail" 
		        android:textSize="22sp"
		        android:paddingBottom="20dp"/>
		
		    <Button
		        android:id="@+id/eaglepop"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/activitybuttonhigh"
		        android:text="3. Glen Eagles Vista Trail" 
		        android:textSize="22sp"
		        android:paddingBottom="20dp"/>
		
		    <Button
		        android:id="@+id/mastpop"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/activitybuttonhigh"
		        android:text="4. Mast Trail" 
		        android:textSize="22sp"
		        android:paddingBottom="20dp"/>
		
		    <Button
		        android:id="@+id/meanderpop"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/activitybuttonhigh"
		        android:text="5. Finch Meander Trail"
		        android:textSize="22sp"
		        android:paddingBottom="20dp" />
		
		    <Button
		        android:id="@+id/orchardpop"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/activitybuttonhigh"
		        android:text="6. Orchard Trail"
		        android:textSize="22sp"
		        android:paddingBottom="20dp" />
		
		    <Button
		        android:id="@+id/vistapop"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/activitybuttonhigh"
		        android:text="7. Vista Trail"
		        android:textSize="22sp"
		        android:paddingBottom="20dp" />
		
		    <Button
		        android:id="@+id/woodlandpop"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/activitybuttonhigh"
		        android:text="8. Woodland Trail"
		        android:textSize="22sp"
		        android:paddingBottom="20dp" />
	</LinearLayout>
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:background="@null"/>
	
	    <Button
	        android:id="@+id/guidepop"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="#77FFFFFF"
	        android:padding="13dp"
	       
	        android:text="Click here for the Rouge Park Visitors Code"
	        android:textSize="28sp" />

	    <TextView
	        android:id="@+id/textView3"
	        android:gravity="center"
	        android:layout_width="wrap_content"
	        android:paddingTop="15dp"
	        android:padding="15dp"
	        android:textColor="@color/black"
	        android:layout_height="wrap_content"
	        android:textSize="19sp"
	        android:text="***All images on this page are subjected to a Copyright by Rouge Park***" />

</LinearLayout>
</ScrollView>